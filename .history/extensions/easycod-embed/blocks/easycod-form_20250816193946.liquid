{% comment %}
  File: extensions/easycod-embed/blocks/easycod-form.liquid
{% endcomment %}

{% schema %}
{
  "name": "EasyCod Form Block",
  "target": "section",
  "settings": [
     {
      "type": "text",
      "id": "heading",
      "label": "Heading (Optional)",
      "default": "Place Your Order"
    }
  ]
}
{% endschema %}

<div class="easycod-form-block">
  {% if block.settings.heading != blank %}
    <h3>{{ block.settings.heading }}</h3>
  {% endif %}
  
  {{ 'easycod-form-bundle.js' | asset_url | script_tag }}

  <div id="easycod-form-root"></div>
</div>