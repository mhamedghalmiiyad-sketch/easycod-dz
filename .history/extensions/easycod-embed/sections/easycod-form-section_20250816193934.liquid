{% comment %}
  File: extensions/easycod-embed/sections/easycod-form-section.liquid
{% endcomment %}

{% schema %}
{
  "name": "EasyCod Form Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Place Your Order"
    }
  ]
}
{% endschema %}

<section class="easycod-form-section">
  {% if section.settings.heading != blank %}
    <h2>{{ section.settings.heading }}</h2>
  {% endif %}

  {{ 'easycod-form-bundle.js' | asset_url | script_tag }}

  <div id="easycod-form-root"></div>
</section>