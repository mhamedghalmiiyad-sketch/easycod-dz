{
  "name": "easycod-dz",
  "private": true,
  "scripts": {
    "dev": "shopify app dev",
    "build": "npm run build:form && remix build",
    "build:form": "esbuild app/form-renderer/index.tsx --bundle --outfile=extensions/easycod-embed/assets/easycod-form-bundle.js --minify",
    "deploy": "shopify app deploy",
    "config:link": "shopify app config link",
    "generate": "shopify app generate",
    "config:use": "shopify app config use",
    "env": "shopify app env",
    "start": "remix-serve ./build/server/index.js",
    "setup": "prisma generate && prisma migrate deploy",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "shopify": "shopify",
    "prisma": "prisma"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.5",
    "@fontsource/inter": "^5.0.18",
    "@mui/icons-material": "^5.15.20",
    "@mui/material": "^5.15.20",
    "@prisma/client": "5.16.1",
    "@remix-run/node": "^2.9.2",
    "@remix-run/react": "^2.9.2",
    "@remix-run/serve": "^2.9.2",
    "@shopify/app-bridge-react": "^4.1.6",
    "@shopify/polaris": "^13.9.5",
    "@shopify/polaris-icons": "^9.3.1",
    "@shopify/shopify-app-remix": "^3.8.5",
    "@shopify/shopify-app-session-storage-prisma": "^6.0.0",
    "google-auth-library": "^10.1.0",
    "googleapis": "^154.0.0",
    "isbot": "^5.1.11",
    "isomorphic-dompurify": "^2.13.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.9.2",
    "@remix-run/eslint-config": "^2.9.2",
    "@types/eslint": "^8.56.10",
    "@types/node": "^20.14.8",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "postcss": "^8.4.38",
    "prisma": "5.16.1",
    "tailwindcss": "^3.4.4",
    "tsx": "^4.15.7",
    "typescript": "^5.5.2",
    "vite": "^5.3.1",
    "vite-tsconfig-paths": "^4.3.2"
  },
  "workspaces": [
    "extensions/*"
  ]
}
